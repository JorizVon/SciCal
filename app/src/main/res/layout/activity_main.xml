<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:background="@color/black"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="20sp"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="70sp">
            <TextView
                android:id="@+id/displayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="viewEnd"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"/>

            <TextView
                android:id="@+id/finalAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"
                android:textAlignment="viewEnd"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingBottom="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/keys"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/answer"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        android:layout_margin="5sp"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCIENTIFIC CALCULATOR"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingBottom="20sp">

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:text="sin"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/cos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:text="cos"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/tan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:text="tan"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="log"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/ln"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="ln"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/pi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="&#x3C0;"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/squareroot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="√"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/negate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="+/-"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="x^y"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="x²"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/factorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="x!"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="1/x"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="."
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="7"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="8"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="9"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="C"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/clear_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="AC"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="4"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="5"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="6"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="x"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="÷"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="1"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="2"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="3"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="-"
                    android:textSize="17sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="+"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/open_bracket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="("
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="0"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/close_bracket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text=")"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/equals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="2sp"
                    android:text="="
                    android:textSize="12sp"
                    android:width="160sp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
